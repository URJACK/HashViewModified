!!!
%html
  %header
    %script(src="/js/my.js")
    
    :javascript
      //after each 10 seconds, this is page will try to get new data from the server
      let GETDATASPAN = 10000;
      let clock = setInterval(getDataFromServer, GETDATASPAN);
  %body
    .container
      %h1

      %form{'accept-charset' => "UTF-8",action: "/net_packets/search",method: "post"}
        %div.input-group
          %div.input-group-prepend
            %span.input-group-text Input ip or port
          %input{name: "data",type: "text","aria-label" => "First name",class: "form-control"}
          %input{type: "submit",value: "Search",class:"btn btn-primary"}
      %div= @debugindex
      %table.table.table-bordered.table-hover
        %thead
          %tr
            %th id
            %th lastupdated
            %th type
            %th scope
            %th name
            %th path
            %th size
            %th checksum
            %th{colspan: "3"}
        - @wordlists.each do |word|
          %tr
            %th #{word.id}
            %th #{word.lastupdated}
            %th #{word.type}
            %th #{word.scope}
            %th #{word.name}
            %th #{word.path}
            %th #{word.size}
            %th #{word.checksum}

      %a{href: "/home",class: "btn btn-primary"} Add a new packet
