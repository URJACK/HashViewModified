!!!
%html
  %header
    %script(src="/js/my.js")
    
    :javascript
      //after each 10 seconds, this is page will try to get new data from the server
      let GETDATASPAN = 10000;
      let clock = setInterval(getDataFromServer, GETDATASPAN);
  %body
    .container
      %h1

      %form{'accept-charset' => "UTF-8",action: "/packets/search",method: "post"}
        %div.input-group
          %div.input-group-prepend
            %span.input-group-text Input ip or port
          %input{name: "data",type: "text","aria-label" => "First name",class: "form-control"}
          %input{type: "submit",value: "Search",class:"btn btn-primary"}
      %div= @debugindex
      %table.table.table-bordered.table-hover
        %thead
          %tr
            %th id
            %th starttime
            %th stoptime
            %th srcip
            %th dstip
            %th srcport
            %th dstport
            %th packets
            %th{colspan: "3"}
        - @netpackets.each do |packet|
          %tr
            %th #{packet.id}
            %th #{packet.starttime}
            %th #{packet.stoptime}
            %th #{packet.srcip}
            %th #{packet.dstip}
            %th #{packet.srcport}
            %th #{packet.dstport}
            %th #{packet.packets}

      %a{href: "/packets/new",class: "btn btn-primary"} Add a new packet
